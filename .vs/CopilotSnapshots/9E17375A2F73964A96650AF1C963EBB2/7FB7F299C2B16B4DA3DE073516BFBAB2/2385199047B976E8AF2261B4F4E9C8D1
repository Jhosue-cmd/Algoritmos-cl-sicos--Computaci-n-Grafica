using System;
using System.Windows.Forms;

namespace Algoritmo_de_lineas
{
    public partial class frmMenu : Form
    {
        public frmMenu()
        {
            InitializeComponent();
        }

        private void frmMenu_Load(object sender, EventArgs e)
        {
            // Configuración inicial del formulario
        }

        private void btnDDA_Click(object sender, EventArgs e)
        {
            // Abrir formulario DDA
            frmDDA formDDA = new frmDDA();
            this.Hide();
            formDDA.ShowDialog();
            this.Show();
        }

        private void btnBresenham_Click(object sender, EventArgs e)
        {
            // Abrir formulario Bresenham
            frmBresenham formBresenham = new frmBresenham();
            this.Hide();
            formBresenham.ShowDialog();
            this.Show();
        }

        private void btnXiaolin_Click(object sender, EventArgs e)
        {
            // Abrir formulario Xiaolin Wu
            frmXiaolin formXiaolin = new frmXiaolin();
            this.Hide();
            formXiaolin.ShowDialog();
            this.Show();
        }

        private void btnSalir_Click(object sender, EventArgs e)
        {
            // Confirmar salida
            DialogResult resultado = MessageBox.Show(
                "¿Está seguro que desea salir de la aplicación?",
                "Confirmar Salida",
                MessageBoxButtons.YesNo,
                MessageBoxIcon.Question);

            if (resultado == DialogResult.Yes)
            {
                Application.Exit();
            }
        }

        private void lblDescripcion_Click(object sender, EventArgs e)
        {
            // Evento no utilizado
        }
    }
}
